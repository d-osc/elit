{
  "name": "elit",
  "version": "0.1.0",
  "description": "Optimized lightweight library for creating DOM elements with reactive state",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "elit": "./dist/cli-main.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "import": "./dist/dom.mjs",
      "require": "./dist/dom.js"
    },
    "./el": {
      "types": "./dist/el.d.ts",
      "import": "./dist/el.mjs",
      "require": "./dist/el.js"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.mjs",
      "require": "./dist/router.js"
    },
    "./state": {
      "types": "./dist/state.d.ts",
      "import": "./dist/state.mjs",
      "require": "./dist/state.js"
    },
    "./style": {
      "types": "./dist/style.d.ts",
      "import": "./dist/style.mjs",
      "require": "./dist/style.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./hmr": {
      "types": "./dist/hmr.d.ts",
      "import": "./dist/hmr.mjs",
      "require": "./dist/hmr.js"
    },
    "./build": {
      "types": "./dist/build.d.ts",
      "import": "./dist/build.mjs",
      "require": "./dist/build.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "docs:dev": "npm run --prefix docs dev",
    "docs:build": "npm run --prefix docs build",
    "docs:preview": "npm run --prefix docs preview",
    "docs:deploy": "npm run docs:build && gh-pages -d docs/dist"
  },
  "keywords": [
    "dom",
    "reactive",
    "state-management",
    "ui",
    "framework",
    "typescript",
    "lightweight",
    "ssr",
    "router",
    "css-in-js",
    "virtual-scrolling",
    "hmr",
    "hot-module-replacement",
    "dev-server",
    "development",
    "websocket",
    "rest-api",
    "shared-state",
    "real-time",
    "build",
    "bundler",
    "esbuild"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-osc/elit.git"
  },
  "bugs": {
    "url": "https://github.com/d-osc/elit/issues"
  },
  "homepage": "https://github.com/d-osc/elit#readme",
  "dependencies": {
    "chokidar": "^4.0.3",
    "esbuild": "^0.24.2",
    "mime-types": "^2.1.35",
    "open": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "terser": "^5.44.1",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
