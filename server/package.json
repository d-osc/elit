{
  "name": "@elit/server",
  "version": "0.1.0",
  "description": "Development server with Hot Module Replacement for Elit",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "elit-dev": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./state": {
      "types": "./dist/client-state.d.ts",
      "import": "./dist/client-state.mjs",
      "require": "./dist/client-state.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "elit",
    "hmr",
    "hot-module-replacement",
    "dev-server",
    "development",
    "websocket",
    "rest-api",
    "shared-state",
    "real-time"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/d-osc/elit.git"
  },
  "bugs": {
    "url": "https://github.com/d-osc/elit/issues"
  },
  "homepage": "https://github.com/d-osc/elit#readme",
  "dependencies": {
    "chokidar": "^4.0.3",
    "mime-types": "^2.1.35",
    "open": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/node": "^22.0.0",
    "@types/ws": "^8.5.13",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "elit": "^0.1.0"
  },
  "peerDependenciesMeta": {
    "elit": {
      "optional": true
    }
  }
}
